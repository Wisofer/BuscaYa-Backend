@{
    ViewData["Title"] = "Inicio de Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es" data-theme="business">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuscaYa</title>
    <script src="~/lib/tailwindcss/tailwind.min.js"></script>
    <link href="~/lib/daisyui/full.min.css" rel="stylesheet" type="text/css" />
    <style>
        .hero-pattern {
            background-color: #1a1a2e;
            background-image: 
                radial-gradient(at 47% 33%, hsl(220, 60%, 15%) 0, transparent 59%), 
                radial-gradient(at 82% 65%, hsl(218, 39%, 11%) 0, transparent 55%);
        }
        .glow {
            box-shadow: 0 0 40px rgba(251, 146, 60, 0.15);
        }
        .input-glow:focus {
            box-shadow: 0 0 0 3px rgba(251, 146, 60, 0.2);
        }
        .moto-icon {
            animation: float 3s ease-in-out infinite;
        }
        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        .btn-gradient {
            background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
        }
        .btn-gradient:hover {
            background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);
        }
    </style>
</head>
<body class="min-h-screen hero-pattern">
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="flex flex-col lg:flex-row w-full max-w-5xl">
            
            <!-- Panel Izquierdo: Branding -->
            <div class="hidden lg:flex lg:w-1/2 flex-col justify-center items-center p-12">
                <div class="text-center">
                    <!-- Icono de Búsqueda -->
                    <div class="moto-icon mb-8">
                        <svg class="w-32 h-32 mx-auto text-orange-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                    </div>
                    <h1 class="text-5xl font-black mb-4 tracking-tight">
                        <span class="text-white">Busca</span><span class="text-orange-500">Ya</span>
                    </h1>
                    <p class="text-xl text-gray-400 mb-8">Encuentra lo que buscas cerca de ti</p>
                    
                    <!-- Features -->
                    <div class="space-y-4 text-left max-w-xs mx-auto">
                        <div class="flex items-center gap-3 text-gray-300">
                            <div class="w-10 h-10 rounded-lg bg-orange-500/20 flex items-center justify-center">
                                <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                </svg>
                            </div>
                            <span>Búsqueda Local</span>
                        </div>
                        <div class="flex items-center gap-3 text-gray-300">
                            <div class="w-10 h-10 rounded-lg bg-orange-500/20 flex items-center justify-center">
                                <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                            </div>
                            <span>Por Ubicación</span>
                        </div>
                        <div class="flex items-center gap-3 text-gray-300">
                            <div class="w-10 h-10 rounded-lg bg-orange-500/20 flex items-center justify-center">
                                <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                </svg>
                            </div>
                            <span>Contacto Directo</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel Derecho: Login Form -->
            <div class="w-full lg:w-1/2 flex items-center justify-center p-4 lg:p-12">
                <div class="card w-full max-w-md bg-base-200 shadow-2xl glow">
                    <div class="card-body p-8">
                        <!-- Logo móvil -->
                        <div class="lg:hidden text-center mb-6">
                            <div class="flex items-center justify-center gap-2 mb-2">
                                <svg class="w-10 h-10 text-orange-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <path d="m21 21-4.35-4.35"></path>
                                </svg>
                                <h1 class="text-2xl font-black">
                                    <span class="text-white">Busca</span><span class="text-orange-500">Ya</span>
                                </h1>
                            </div>
                        </div>

                        <h2 class="text-2xl font-bold text-center mb-2">Bienvenido</h2>
                        <p class="text-center text-gray-500 mb-6">Ingresa tus credenciales para continuar</p>

                        <!-- Mensajes de Error -->
                        @if (!string.IsNullOrEmpty(ViewBag.Error as string))
                        {
                            <div class="alert alert-error mb-6">
                                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span>@ViewBag.Error</span>
                            </div>
                        }

                        <!-- Formulario -->
                        <form action="/login" method="post" class="space-y-5" id="loginForm">
                            @Html.AntiForgeryToken()
                            
                            @if (!string.IsNullOrEmpty(Context.Request.Query["ReturnUrl"].ToString()))
                            {
                                <input type="hidden" name="returnUrl" value="@Context.Request.Query["ReturnUrl"]" />
                            }

                            <!-- Usuario -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-medium">Usuario</span>
                                </label>
                                <div class="relative">
                                    <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-500">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                        </svg>
                                    </span>
                                    <input 
                                        type="text" 
                                        name="NombreUsuario" 
                                        placeholder="Ingresa tu usuario"
                                        class="input input-bordered w-full pl-12 input-glow focus:border-orange-500"
                                        required
                                        autocomplete="username"
                                        autofocus
                                    />
                                </div>
                            </div>

                            <!-- Contraseña -->
                            <div class="form-control">
                                <label class="label">
                                    <span class="label-text font-medium">Contraseña</span>
                                </label>
                                <div class="relative">
                                    <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-500">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                        </svg>
                                    </span>
                                    <input 
                                        type="password" 
                                        id="passwordInput"
                                        name="Contrasena" 
                                        placeholder="Ingresa tu contraseña"
                                        class="input input-bordered w-full pl-12 pr-12 input-glow focus:border-orange-500"
                                        required
                                        autocomplete="current-password"
                                    />
                                    <button 
                                        type="button"
                                        id="togglePassword"
                                        class="absolute inset-y-0 right-0 flex items-center pr-4 text-gray-500 hover:text-orange-500 transition-colors"
                                        aria-label="Mostrar/Ocultar contraseña"
                                    >
                                        <!-- Icono de ojo cerrado (por defecto) -->
                                        <svg id="eyeClosed" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                                        </svg>
                                        <!-- Icono de ojo abierto (oculto por defecto) -->
                                        <svg id="eyeOpen" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>

                            <!-- Botón -->
                            <button 
                                type="submit" 
                                class="btn btn-block btn-gradient text-white border-0 text-lg font-semibold h-14 mt-6"
                            >
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                                </svg>
                                Iniciar Sesión
                            </button>
                        </form>

                        <!-- Footer -->
                        <div class="divider mt-8 mb-4"></div>
                        <p class="text-center text-xs text-gray-500">
                            Desarrollado por <a href="https://www.cowib.es" target="_blank" rel="noopener noreferrer" class="font-bold hover:text-orange-500 transition-colors">COWIB</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Loader para Login -->
    <div id="globalLoader" class="hidden fixed inset-0 z-[9999] flex items-center justify-center bg-black/70 backdrop-blur-sm">
        <div class="relative">
            <!-- Círculo de fondo animado -->
            <div class="absolute inset-0 flex items-center justify-center">
                <div class="w-32 h-32 rounded-full border-4 border-orange-500/20 animate-pulse"></div>
            </div>
            
            <!-- Spinner principal -->
            <div class="relative flex flex-col items-center justify-center">
                <!-- Logo animado -->
                <div class="mb-6 relative">
                    <div class="w-20 h-20 rounded-xl bg-gradient-to-br from-orange-500 to-orange-600 flex items-center justify-center shadow-2xl animate-bounce-slow">
                        <svg class="w-16 h-16 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                    </div>
                    <!-- Anillos rotatorios -->
                    <div class="absolute inset-0 border-4 border-transparent border-t-orange-500 rounded-xl animate-spin-slow"></div>
                    <div class="absolute inset-0 border-4 border-transparent border-r-orange-600 rounded-xl animate-spin-reverse"></div>
                </div>
                
                <!-- Texto de carga -->
                <div class="text-center">
                    <h3 id="loaderTitle" class="text-xl font-bold text-white mb-2">Iniciando sesión...</h3>
                    <p id="loaderMessage" class="text-sm text-white/70">Validando credenciales</p>
                    
                    <!-- Barra de progreso animada -->
                    <div class="mt-4 w-64 h-1 bg-white/20 rounded-full overflow-hidden">
                        <div class="h-full bg-gradient-to-r from-orange-500 via-orange-600 to-orange-500 rounded-full animate-progress"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <style>
        @@keyframes bounce-slow {
            0%, 100% { transform: translateY(0) scale(1); }
            50% { transform: translateY(-10px) scale(1.05); }
        }
        @@keyframes spin-slow {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        @@keyframes spin-reverse {
            from { transform: rotate(360deg); }
            to { transform: rotate(0deg); }
        }
        @@keyframes progress {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }
        .animate-bounce-slow { animation: bounce-slow 2s ease-in-out infinite; }
        .animate-spin-slow { animation: spin-slow 3s linear infinite; }
        .animate-spin-reverse { animation: spin-reverse 2s linear infinite; }
        .animate-progress { animation: progress 1.5s ease-in-out infinite; }
    </style>
    
    <script>
        // Servicio global para manejar el loader
        window.Loader = {
            show: function(title = 'Procesando...', message = 'Por favor espere') {
                const loader = document.getElementById('globalLoader');
                const loaderTitle = document.getElementById('loaderTitle');
                const loaderMessage = document.getElementById('loaderMessage');
                
                if (loader) {
                    if (loaderTitle) loaderTitle.textContent = title;
                    if (loaderMessage) loaderMessage.textContent = message;
                    loader.classList.remove('hidden');
                    document.body.style.overflow = 'hidden';
                }
            },
            hide: function() {
                const loader = document.getElementById('globalLoader');
                if (loader) {
                    loader.classList.add('hidden');
                    document.body.style.overflow = '';
                }
            }
        };
        
        // Mostrar loader al enviar formulario de login
        document.getElementById('loginForm').addEventListener('submit', function() {
            window.Loader.show('Iniciando sesión...', 'Validando credenciales');
        });
        
        // Toggle mostrar/ocultar contraseña
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('passwordInput');
        const eyeClosed = document.getElementById('eyeClosed');
        const eyeOpen = document.getElementById('eyeOpen');
        
        if (togglePassword && passwordInput) {
            togglePassword.addEventListener('click', function() {
                const isPassword = passwordInput.type === 'password';
                
                // Cambiar tipo de input
                passwordInput.type = isPassword ? 'text' : 'password';
                
                // Cambiar iconos
                if (isPassword) {
                    eyeClosed.classList.add('hidden');
                    eyeOpen.classList.remove('hidden');
                } else {
                    eyeClosed.classList.remove('hidden');
                    eyeOpen.classList.add('hidden');
                }
            });
        }
    </script>
</body>
</html>
